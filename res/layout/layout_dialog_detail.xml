<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_conner_bottom"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/blueDialog"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/blueDialog" />

    <TextView
        android:id="@+id/tvDetailMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight" />

    <TextView
        android:id="@+id/tvButtonClose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_lnlayout"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/close"
        android:textColor="@color/grayDark"
        android:textSize="17sp" />

</LinearLayout>